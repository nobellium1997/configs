function s3dl
    aws s3 cp s3://eds-upstream-intelligence-$argv[1]/$argv[2] ~/Work/Misc/S3Downloads/$argv[3]
end

function s3ul
    aws s3 cp $argv[2] s3://eds-upstream-intelligence-$argv[1]/$argv[3]
end

function s3ls
    aws s3 ls --recursive s3://eds-upstream-intelligence-$argv
end

