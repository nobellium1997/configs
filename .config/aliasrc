function ld {
	lsd --color --group-dirs first $@
	echo
}

function s3download {
    aws s3 cp s3://eds-upstream-intelligence-$1/$2 ~/Work/Misc/S3Downloads/$3
}

function s3upload {
    aws s3 cp $2 s3://eds-upstream-intelligence-$1/$3
}

function s3ls {
    aws s3 ls --recursive s3://eds-upstream-intelligence-$@
}

# alias ls="ls --color --group-directories-first"
alias ls=ld
alias r=ranger
alias :q=exit
export EDITOR=nvim
alias ride=rider.sh
alias update="sudo apt update && sudo apt upgrade -y"
alias grep="grep --color"
alias c="clear"
alias tks="tmux kill-server"
# alias vim=nvim
alias open=xdg-open
alias python=python3
alias pip=pip3
alias three=~/.screenlayout/threescreen.sh
alias one=~/.screenlayout/singlescreen.sh
alias ta="tmux attach"
alias cdw="cd ~/Work"
alias t=tig
alias ts="tig status"
alias tref="tig refs"
alias dp="dotnet publish -c Release"
alias dt="dotnet test --filter"
alias ns="notify-send"
alias b="cd .."
alias config='/usr/bin/git --git-dir=/home/nobel/.cfg/ --work-tree=/home/nobel'
alias dbg="fd -e sln -x code {//}"
alias s3d='cd ~/Work/Misc/S3Downloads'
