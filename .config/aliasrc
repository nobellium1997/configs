alias ls="ls -l --color"
function cs {
    cd $@ && ls
}

function open {
    xdg-open $@ &; disown
}

alias cd=cs
alias r=ranger
alias q=exit
alias tks="tmux kill-server"
alias ta="tmux attach"
alias tinit="tmux attach || tmux"
alias cdw="cd ~/School"
alias cda="cd ~/School/CS6475/assignments"
alias cdnb="cd ~/School/CS6475/lab_exercises"
alias cdn="cd ~/Notes"
alias t=tig
alias ts="tig status"
alias tr="tig refs"
alias ns="notify-send"
alias config='/usr/bin/git --git-dir=/home/nobel/.cfg/ --work-tree=/home/nobel'
alias proxy="export http_proxy=127.0.0.1:44700; export https_proxy=127.0.0.1:44700"
alias unproxy="set -e http_proxy; set -e https_proxy"
alias ca-cert='export REQUESTS_CA_BUNDLE=/etc/ssl/certs/ca-certificates.crt'
alias no-cert="set -e REQUESTS_CA_BUNDLE"
alias fd=fdfind
alias b="cd .."
